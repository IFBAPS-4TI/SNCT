        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "slim/twig-view": "^2.4",
        "bryanjhv/slim-session": "~3.0",
        "firebase/php-jwt": "^5.0",
        "helhum/dotenv-connector": "^2.1",
        "respect/validation": "^1.1",
        "slim/pdo": "^1.10",
        "sendgrid/sendgrid": "^7.2",
        "tamtamchik/simple-flash": "^1.2"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "extra": {
        "helhum/dotenv-connector": {
            "env-file": ".env"
        }
    },
    "scripts": {
        "start": "php -S 127.0.0.1:8080 -t public",
        "test": "phpunit"
    }

}
